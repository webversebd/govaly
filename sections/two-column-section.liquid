{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}

<style>
    /* Two column Gallary CSS */

#two-column-gallary .box{
    display: flex;
    flex-direction:row;
    flex-wrap: wrap;
    justify-content:space-between;
    align-items:center;
    gap: 40px;
}

.image{
    display: block;
    max-width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    z-index: -1;
    transition: 0.5s all ease-in-out; 
}
.image img{
    height: inherit;
    max-width: 100%;
    object-fit: cover;
    object-position: center center;
    transition: 0.5s all ease-in-out; 
}
.overlay::after{
    content: ""; 
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(0, 0, 0);
    opacity: .1;
}

.overlay-hover::before{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255,255,255,.5);
    content: "";
    -webkit-transition: all .6s;
    transition: all .6s;
    z-index: 2;
    -webkit-transform: scale3d(1.9,1.4,1) rotate3d(0,0,1,-45deg) translate3d(0,-150%,0);
    transform: scale3d(1.9,1.4,1) rotate3d(0,0,1,-45deg) translate3d(0,-150%,0);
}
.item:hover .overlay-hover::before{
    -webkit-transform: scale3d(1.9,1.4,1) rotate3d(0,0,1,-45deg) translate3d(0,150%,0);
    transform: scale3d(1.9,1.4,1) rotate3d(0,0,1,-45deg) translate3d(0,150%,0);
    opacity: 1;
}

#two-column-gallary .text > *{
    font-weight: 600;
    line-height: 1.3;
}
#two-column-gallary .text > *:not(.btn){
    color: rgb(var(--color-foreground));
}

#two-column-gallary .item{
    width: calc(50% - 20px);
    position: relative;
    overflow: hidden;
    transition: 0.5s all ease-in-out; 
    height: {{section.settings.height}}; 
}
#two-column-gallary .item:hover .image{
    transform: scale(1.3);
    transition: 0.5s all ease-in-out; 
}
#two-column-gallary .item .text h2{
    font-size: 24px;
    margin: 0;
}
#two-column-gallary .item .text{
    width: 75%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 200px;
}


/* Responsive Mobile */

@media only screen and (max-width: 767px) {
    #two-column-gallary .item{
        width: 100%;
        height: 330px;
    }
  }
</style>

<div id="two-column-gallary" class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="section-{{ section.id }}-padding page-width">
    <div class="box">
      {% for block in section.blocks %}
        <div class="item item1" >
          <a href="{{block.settings.button_link}}">
          <div class="text" style="float:{{block.settings.align}}">
            <h2>{{ block.settings.heading }}</h2>
            <p>{{ block.settings.collection_name }}</p>
            <a class="btn btn-{{block.settings.button}}" href="{{block.settings.button_link}}">{{ block.settings.button_label }}</a>
          </div>
          <div class="image overlay-hover">
            {% if block.settings.image != blank %}           
              <img src="{{ block.settings.image | image_url }}" alt="">
            {% endif %}
          </div>
          </a>
        </div>      
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
"name": "Two column Gallary",
"tag": "section",
"class": "section",
  "settings": [
    {
    "type": "text",
    "id": "height",
    "label": "Height",
    "default": "200px"
    },
    {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "t:sections.all.colors.label",
    "default": "scheme-1"
    },
    {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
    },
    {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 40
    },
    {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 52
    }
  ],
"blocks": [
    {
    "type": "column",
    "name": "Add Slide",
    "settings": [
          {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
          },
          {
          "type": "select",
          "id": "button",
          "label": "Button Color",
          "default" : "primary",
          "options": [
                {
                "value": "primary",
                "label": "primary"
                },
                {
                "value": "secondary",
                "label": "secondary"
                }
            ]
          },
          {
          "type": "select",
          "id": "align",
          "label": "Text Align",
          "default" : "left",
          "options": [
                {
                "value": "left",
                "label": "left"
                },
                {
                "value": "right",
                "label": "right"
                }
            ]
          },
          {
          "type": "text",
          "id": "collection_name",
          "label": "Sub Text",
          "default" : "Big Offers!"
          },
          {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Mens Big Collections"
          },
          {
          "type": "text",
          "id": "button_label",
          "label": "Button Name",
          "default": "Explore More"
          },
          {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
          }
  ]
 }
],

"presets": [
    {
    "name": "Two Column Gallary"
    }
]
}
{% endschema %}